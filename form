print "What's your first name?"
first_name = gets.chomp
answer2 = first_name.capitalize 
first_name.capitalize!

print "What's your last name?"
last_name = gets.chomp
answer2 = last_name.capitalize 
last_name.capitalize!

print "Which city do you live in?"
city = gets.chomp
answer2 = city.capitalize 
city.capitalize!

print "What's the abbreviation of the state?"
state = gets.chomp
answer2 = state.upcase 
state.upcase!

puts "Your name is #{first_name} #{last_name}. You live in #{city} which is in #{state}."
